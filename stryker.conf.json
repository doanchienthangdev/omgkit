{
  "$schema": "./node_modules/@stryker-mutator/core/schema/stryker-schema.json",
  "packageManager": "npm",
  "testRunner": "vitest",
  "coverageAnalysis": "perTest",
  "mutate": [
    "lib/**/*.js",
    "bin/**/*.js",
    "!lib/**/*.test.js",
    "!bin/**/*.test.js"
  ],
  "reporters": [
    "html",
    "progress",
    "clear-text"
  ],
  "htmlReporter": {
    "fileName": "mutation-report.html"
  },
  "thresholds": {
    "high": 80,
    "low": 60,
    "break": 50
  },
  "concurrency": 4,
  "timeoutMS": 60000,
  "timeoutFactor": 2,
  "disableTypeChecks": true,
  "cleanTempDir": true,
  "ignoreStatic": true,
  "mutator": {
    "excludedMutations": [
      "StringLiteral"
    ]
  }
}
